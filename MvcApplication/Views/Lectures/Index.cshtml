@model IEnumerable<MvcApplication.Models.Lecture>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Date
        </th>
        <th>
            Description
        </th>
        <th>
            Notes
        </th>
        <th>
            Course
        </th>
    </tr>

@foreach (var item in Model) {
